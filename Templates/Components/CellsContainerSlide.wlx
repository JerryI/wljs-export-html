id = $Options["Notebook"]["Hash"];
Color = If[StringQ[#], #, "teal"]& @ ($Options["Parameters"]["AccentColor"]);

<div id="container-{id}">
    <style>
        :root {
            --editor-selected-tint: #0088550d;
        }

        .pause-overlay {
            display: none;  
        }
    </style>
    <$Children/>
</div>